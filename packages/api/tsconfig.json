{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "declaration": true,
      "removeComments": true,
      "noLib": false,
      "target": "ESNext",
      "sourceMap": true,
      "lib": [
        "ESNext"
      ],
      "outDir": "./dist"
    },
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
    "include": [
        "./src",
        "./migrations"
    ]
}