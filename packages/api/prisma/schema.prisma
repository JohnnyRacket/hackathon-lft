// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  // url      = env("DATABASE_URL")
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id                  Int          @id @default(autoincrement())
  createdAt           DateTime     @default(now())
  updateddAt          DateTime     @default(now())
  name                String
  email               String
  role                Role         @relation(fields: [roleName], references: [name])
  team                String
  skills              Skill[]
  roleName            String
  sentInvitations     Invitation[] @relation("inviteSender")
  receivedInvitations Invitation[] @relation("inviteReceiver")
}

model Skill {
  name  String @id
  users User[]
}

model Role {
  name String @id
  user User[]
}

model Invitation {
  id            Int    @id @default(autoincrement())
  sendingUser   User   @relation("inviteSender", fields: [senderId], references: [id])
  receivingUser User   @relation("inviteReceiver", fields: [receiverId], references: [id])
  status        String
  senderId      Int
  receiverId    Int
}
